<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/txan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="25dp"
        android:text=""
        android:textAlignment="center"
        android:fontFamily="@font/mont"
        android:textColor="@color/teal_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerMain"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/txan"
        app:layout_constraintStart_toStartOf="parent"/>

    <HorizontalScrollView
        android:id="@+id/hsv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/viewPagerMain"
        app:layout_constraintStart_toStartOf="parent"
        android:scrollbarSize="0dp"
        android:scrollbars="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/bg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/itanah"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/land"/>
<!--                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    -->


                <Button
                    android:id="@+id/hmtanah"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btn"
                    android:padding="5dp"
                    android:text="Tanah"
                    android:textColor="#fff"
                    android:fontFamily="@font/mont"
                    android:textSize="10sp" />
            </LinearLayout>
            <!--                    android:layout_marginBottom="20dp"-->
            <!--                    android:layout_marginLeft="20dp"-->
            <!--                    android:layout_marginRight="20dp"-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/bg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iapart"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/apartment"/>
                <!--                    android:layout_marginTop="20dp"-->
                <!--                    android:layout_marginLeft="20dp"-->
                <!--                    android:layout_marginRight="20dp"-->

                <Button
                    android:id="@+id/hmapart"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btn"
                    android:padding="5dp"
                    android:text="Apartemen"
                    android:textColor="#fff"
                    android:fontFamily="@font/mont"
                    android:textSize="10sp" />
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/bg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/irumah"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/house"/>
                <!--                    android:layout_marginTop="20dp"-->
                <!--                    android:layout_marginLeft="20dp"-->
                <!--                    android:layout_marginRight="20dp"-->

                <Button
                    android:id="@+id/hmrumah"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btn"
                    android:padding="5dp"
                    android:text="Rumah"
                    android:textColor="#fff"
                    android:fontFamily="@font/mont"
                    android:textSize="10sp" />
<!--                android:layout_marginBottom="20dp"-->
<!--                android:layout_marginLeft="20dp"-->
<!--                android:layout_marginRight="20dp"-->
            </LinearLayout>




        </LinearLayout>
    </HorizontalScrollView>



    <TextView
        android:id="@+id/txpro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="25dp"
        android:text="Promosi"
        android:textAlignment="center"
        android:fontFamily="@font/mont"
        android:textColor="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@id/hsv1"/>

    <HorizontalScrollView
        android:id="@+id/hsv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txpro"
        app:layout_constraintStart_toStartOf="parent"
        android:scrollbarSize="0dp"
        android:scrollbars="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/etb"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtanah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="20dp"
                    android:text="Tanah"
                    android:textAlignment="center"
                    android:fontFamily="@font/mont"
                    android:textColor="@color/orange"/>

                <ImageView
                    android:id="@+id/imgtanah"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/dummy"
                    android:scaleType="centerCrop"
                    android:paddingRight="10dp"/>

                <TextView
                    android:id="@+id/txtitletanah"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/mont"
                    />

                <TextView
                    android:id="@+id/txhargatanah"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="harga"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/mont"
                    />

                <TextView
                    android:id="@+id/txluastanah"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="luas"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/mont"
                    />

                <Button
                    android:id="@+id/viewtanah"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/btn"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Lihat"
                    android:textColor="#fff"
                    android:fontFamily="@font/mont"
                    android:textSize="20sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/etb"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txapart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="20dp"
                    android:text="Apartemen"
                    android:textAlignment="center"
                    android:fontFamily="@font/mont"
                    android:textColor="@color/orange"/>

                <ImageView
                    android:id="@+id/imgapart"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/dummy"
                    android:scaleType="centerCrop"
                    android:paddingRight="10dp"/>

                <TextView
                    android:id="@+id/txtitleapart"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/mont"
                    />

                <TextView
                    android:id="@+id/txhargaapart"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="harga"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/mont"
                    />
                <TextView
                    android:id="@+id/txluasapart"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="luas"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/mont"
                    />
                <Button
                    android:id="@+id/viewapart"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/btn"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Lihat"
                    android:textColor="#fff"
                    android:fontFamily="@font/mont"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/etb"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txrumah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="20dp"
                    android:text="Rumah"
                    android:textAlignment="center"
                    android:fontFamily="@font/mont"
                    android:textColor="@color/orange"/>

                <ImageView
                    android:id="@+id/imgrumah"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/dummy"
                    android:scaleType="centerCrop"
                    android:paddingRight="10dp"/>

                <TextView
                    android:id="@+id/txtitlerumah"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/mont"
                    />

                <TextView
                    android:id="@+id/txhargarumah"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/mont"
                    />

                <TextView
                    android:id="@+id/txluasrumah"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="luas"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/mont"
                    />

                <Button
                    android:id="@+id/viewrumah"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/btn"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Lihat"
                    android:textColor="#fff"
                    android:fontFamily="@font/mont"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/ant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="45dp"
        android:text=""
        android:fontFamily="@font/mont"
        android:textColor="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@id/hsv2"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>