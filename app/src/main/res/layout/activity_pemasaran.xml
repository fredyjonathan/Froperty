<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pemasaran"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dttxt"
        android:textColor="@color/teal_700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanah"
        android:textAlignment="center"
        android:textSize="20dp"
        android:fontFamily="@font/mont"
        android:layout_margin="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp" />

    <GridView
        android:id="@+id/gridviewtanah"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:layout_margin="5dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/dttxt"
        >

    </GridView>

    <TextView
        android:id="@+id/dttxta"
        android:textColor="@color/teal_700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lineetb"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/gridviewtanah"
        />

    <TextView
        android:id="@+id/dttxt2"
        android:textColor="@color/teal_700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rumah"
        android:textAlignment="center"
        android:textSize="20dp"
        android:fontFamily="@font/mont"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/dttxta"
        android:padding="5dp" />

    <GridView
        android:id="@+id/gridviewrumah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/dttxt2"
        android:scrollbars="none"
        >

    </GridView>

    <TextView
        android:id="@+id/dttxtb"
        android:textColor="@color/teal_700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/lineetb"
        app:layout_constraintTop_toBottomOf="@id/gridviewrumah"/>

    <TextView
        android:id="@+id/dttxt3"
        android:textColor="@color/teal_700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apartemen"
        android:textAlignment="center"
        android:textSize="20dp"
        android:fontFamily="@font/mont"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/dttxtb"
        android:padding="5dp" />

    <GridView
        android:id="@+id/gridviewapart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:layout_margin="5dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/dttxt3"
        >

    </GridView>

    <TextView
        android:id="@+id/dttxt4"
        android:textColor="@color/teal_700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:fontFamily="@font/mont"
        android:layout_margin="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/gridviewapart"
        android:padding="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>